@model DemoApp.Web.ViewModels.VmBook

@{
    ViewBag.Title = "SaveBook";
}

<h2>Save/Create Book</h2>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chosen.jquery.min.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/zephyr/zephyr-form.js")" type="text/javascript"></script>
}


@using (Html.BeginForm("SaveBook", "Store")) {
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Book</legend>
        
        <div class="control-group">
            <div class="clearfix"/>
            @Html.LabelFor(model => model.Book.BookName)
        
            <div class="controls">
                @Html.EditorFor(model => model.Book.BookName)
                @Html.ValidationMessageFor(model => model.Book.BookName)
            </div>
        
            <div class="clearfix"/>
                @Html.LabelFor(model => model.Book.Category)
        
            <div class="controls">
                @Html.EnumDropDownListFor(model => model.Book.Category, "Select category..")
                @Html.ValidationMessageFor(model => model.Book.Category)
            </div>

            <div class="clearfix"/>
                @Html.LabelFor(model => model.Book.BookDescription)
        
            <div class="controls">
                @Html.TextAreaFor(model => model.Book.BookDescription)
                @Html.ValidationMessageFor(model => model.Book.BookDescription)
            </div>
        
            <div class="clearfix"/>
                @Html.LabelFor(m=>m.Book.Publisher)
        
            <div class="controls">
                @*@Html.DropDownList("SelectPublisherId", Model.PublisherList, "select..")*@
                @Html.DropDownListFor(model=>model.SelectPublisherId, Model.PublisherList, "select..")
                @Html.ValidationMessageFor(model => model.SelectPublisherId)                     
                        
            </div>

            <div class="clearfix"/>
                @Html.LabelFor(model => model.Book.PublishedDate)
        
            <div class="controls">
                @Html.EditorFor(model => model.Book.PublishedDate)
                @Html.ValidationMessageFor(model => model.Book.PublishedDate)
            </div>        

            <div class="clearfix"/>
                @Html.LabelFor(model => model.Book.CreatedBy)
        
            <div class="controls">
                @Html.EditorFor(model => model.Book.CreatedBy)
                @Html.ValidationMessageFor(model => model.Book.CreatedBy)
            </div>

            <div class="clearfix"/>
                @Html.LabelFor(model => model.Book.CreatedAt)
        
            <div class="controls">
                @Html.EditorFor(model => model.Book.CreatedAt)
                @Html.ValidationMessageFor(model => model.Book.CreatedAt)
            </div>

        </div>        
        
        @Html.HiddenFor(model => model.Book.Id)


        <div class="form-actions">
            <button class="btn btn-primary" type="submit"><i class="icon-ok icon-white"></i> 
            Save</button> 
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
